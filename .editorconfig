#
# See https://editorconfig.org for the meaning of this file.
#

root = true

# Python files. This is the alternate max length specified by PEP8.
[{*.py, }]
    max_line_length = 99

# Javascript files
[{*.js, }]
    max_line_length = 99

# HTML files
[*.{htm,html}]
    max_line_length = 120

# Markdown
[*.md]
    max_line_length = 80

# Text
[*.txt]
    max_line_length = 80

[makefile]
    indent_style = tab
